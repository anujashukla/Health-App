<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/profile_id_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/profile_photo_layout"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/my_photo_icon"/>
            <TextView
                android:id="@+id/change_photo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/white"
                android:background="@drawable/bkg_gradient_bottom_to_top"
                android:text="Change Photo"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_photo_layout"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/profile_name_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="@dimen/text_font_profile"
                android:gravity="center"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/profile_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="@dimen/text_font_profile"
                android:hint="Name"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/profile_name_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/profile_photo_layout"
            android:layout_below="@id/profile_name"
            android:background="@color/gray" />
        <RelativeLayout
            android:id="@+id/profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name_line"
            android:layout_toRightOf="@id/profile_photo_layout"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/profile_gender_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="@dimen/text_font_profile"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/profile_gender_edit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="@dimen/text_font_profile"
                android:hint="Gender"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/profile_gender_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/profile_photo_layout"
            android:layout_below="@id/profile_gender"
            android:background="@color/gray" />
        <RelativeLayout
            android:id="@+id/profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_gender_line"
            android:layout_toRightOf="@id/profile_photo_layout"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/profile_age_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="@dimen/text_font_profile"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/profile_age_edit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="@dimen/text_font_profile"
                android:hint="Age"
                android:inputType="number"
                android:textColorHint="@color/gray"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/profile_id_layout_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profile_id_layout"
        android:background="@color/gray" />
    <LinearLayout
        android:id="@+id/profile_weight_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_id_layout_line">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="@dimen/text_font_profile"
                android:text="@string/weight"
                android:gravity="center"
                android:layout_alignParentLeft="true"/>
            <RelativeLayout
                android:id="@+id/profile_weight"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/profile_weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font_profile"
                    android:gravity="center"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/profile_weight_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font_profile"
                    android:gravity="center"
                    android:hint="Weight"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/gray"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="@dimen/text_font_profile"
                android:text="@string/height"
                android:gravity="center"
                android:layout_alignParentLeft="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:id="@+id/profile_height_ft"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/profile_height_ft_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_font_profile"
                        android:visibility="gone"/>
                    <EditText
                        android:id="@+id/profile_height_ft_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_font_profile"
                        android:hint="ft"
                        android:inputType="number"
                        android:textColorHint="@color/gray"
                        android:visibility="gone"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_height_ft"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/profile_height_in_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_font_profile"
                        android:visibility="gone"/>
                    <EditText
                        android:id="@+id/profile_height_in_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_font_profile"
                        android:hint="in"
                        android:inputType="number"
                        android:textColorHint="@color/gray"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/profile_weight_height_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profile_weight_height"
        android:background="@color/gray" />
    <TextView
        android:id="@+id/profile_bmi"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_below="@id/profile_weight_height_line"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_font_profile" />
    <View
        android:id="@+id/profile_bmi_line"
        android:layout_width="fill_parent"
        android:paddingTop="5dp"
        android:layout_height="1dp"
        android:layout_below="@id/profile_bmi"
        android:background="@color/gray" />
    <TextView
        android:id="@+id/profile_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@id/profile_bmi_line"
        android:textSize="@dimen/text_font_profile"
        android:visibility="gone"/>
    <Button
        android:id="@+id/edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_msg"
        android:layout_alignParentRight="true"/>
</RelativeLayout>