<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_margin"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/add_to_cart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="normal"
                android:background="@color/gray"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginTop="130dp"
                android:layout_marginRight="10dp"
                android:text="@string/add_to_cart"/>
            <TextView
                android:id="@+id/wt_rating_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_icon"
                android:textColor="@color/text_gray"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_font_medium" />
            <com.example.nitinsatpal.cleverbelly.CustomViews.ExpandableHeightListView
                android:id="@+id/detail_param_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/wt_rating_text"
                android:divider="@color/app_color"
                android:dividerHeight="1dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>